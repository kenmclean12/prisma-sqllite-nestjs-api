generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  firstName   String
  lastName    String
  avatarUrl   String?
  createdAt   DateTime @default(now())

  properties  Property[]
  bookings    Booking[]
}

model Property {
  id          Int       @id @default(autoincrement())
  name        String
  location    String
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  address     Address?
  services    Service[]
  createdAt DateTime @default(now())
}

model Address {
  id         Int      @id @default(autoincrement())
  street     String
  city       String
  state      String
  country    String
  postalCode String
  propertyId Int?      @unique
  property   Property? @relation(fields: [propertyId], references: [id])
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  propertyId  Int      
  property    Property  @relation(fields: [propertyId], references: [id])
  createdAt   DateTime  @default(now())

  bookings    Booking[]
}

model Booking {
  id        Int       @id @default(autoincrement())
  userId    Int
  serviceId Int
  date      DateTime
  status    String    @default("pending")
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
  service   Service   @relation(fields: [serviceId], references: [id])
}